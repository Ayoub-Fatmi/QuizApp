<Window
    x:Class="QuizApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:QuizApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    MouseLeftButtonUp="Window_MouseLeftButtonUp"
    MouseMove="Window_MouseMove"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    Width="340"
    Height="226">
    <Border Background="#E8E8E8" CornerRadius="15">
        <Grid Width="340" Height="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>
            <TextBlock Text="Enter your username:" FontSize="20" Margin="0,44,0,36" HorizontalAlignment="Center" Grid.Row="0" Grid.RowSpan="2" />
            <TextBox x:Name="UsernameTextBox" Width="300" Height="35" FontSize="24"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <Button Content="Join a game" Width="150" Height="40" FontSize="16" Click="LoginButton_Click" HorizontalAlignment="Center" Grid.Row="2" Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
